<?xml version="1.0" encoding="UTF-8"?>
<project name="sagum" default="all">
  
  
  <property file="sagum.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-32.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module sagum -->
  
  <dirname property="module.sagum.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.sagum" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sagum" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sagum" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sagum" value="-encoding windows-1252 -source 8 ${compiler.args}"/>
  
  <property name="sagum.output.dir" value="${module.sagum.basedir}/out/production/sagum"/>
  <property name="sagum.testoutput.dir" value="${module.sagum.basedir}/out/test/sagum"/>
  
  <path id="sagum.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sagum.module.production.classpath">
    <path refid="${module.jdk.classpath.sagum}"/>
    
  </path>
  
  <path id="sagum.runtime.production.module.classpath">
    <pathelement location="${sagum.output.dir}"/>
    
  </path>
  
  <path id="sagum.module.classpath">
    <path refid="${module.jdk.classpath.sagum}"/>
    <pathelement location="${sagum.output.dir}"/>
    
  </path>
  
  <path id="sagum.runtime.module.classpath">
    <pathelement location="${sagum.testoutput.dir}"/>
    <pathelement location="${sagum.output.dir}"/>
    
  </path>
  
  
  <patternset id="excluded.from.module.sagum">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sagum">
    <patternset refid="excluded.from.module.sagum"/>
  </patternset>
  
  <path id="sagum.module.sourcepath">
    <dirset dir="${module.sagum.basedir}">
      <include name="src"/>
      <include name="res"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sagum" depends="compile.module.sagum.production,compile.module.sagum.tests" description="Compile module sagum"/>
  
  <target name="compile.module.sagum.production" depends="register.custom.compilers" description="Compile module sagum; production classes">
    <mkdir dir="${sagum.output.dir}"/>
    <javac2 destdir="${sagum.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sagum}/javac">
      <compilerarg line="${compiler.args.sagum}"/>
      <bootclasspath refid="sagum.module.bootclasspath"/>
      <classpath refid="sagum.module.production.classpath"/>
      <src refid="sagum.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sagum"/>
    </javac2>
    
    <copy todir="${sagum.output.dir}">
      <fileset dir="${module.sagum.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.sagum.basedir}/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sagum.tests" depends="register.custom.compilers,compile.module.sagum.production" description="compile module sagum; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sagum" description="cleanup module">
    <delete dir="${sagum.output.dir}"/>
    <delete dir="${sagum.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.sagum" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.sagum" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>